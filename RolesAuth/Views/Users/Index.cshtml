@model IEnumerable<RolesAuth.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>


<p>
    <button class="btn btn-outline-info">
        <a asp-action="Create" style="color: black;" >Create User </a>
    </button>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                    <button class="btn btn-outline-warning"> <a asp-action="Edit" asp-route-id="@item.UserId" style="color: black;">Edit</a> </button> |
                    <button class="btn btn-outline-success"> <a asp-action="Details" asp-route-id="@item.UserId" style="color: black;">Details</a> </button> |
                    <button class="btn btn-outline-danger"><a asp-action="Delete" asp-route-id="@item.UserId" style="color: black;"> Delete </a></button> |
            </td>
        </tr>
}
    </tbody>
</table>
