<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aashiyana</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RolesAuth.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          integrity="..." crossorigin="anonymous">

          <style>
        .main {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: center;
            background-color:lightgray;
        }

            .main div {
                flex: 1;
                margin-right: 20px;
                margin-bottom: 20px;
            }

            .main h3 {
                border-bottom: 1px solid #ccc;
                padding-bottom: 5px;
                text-align: center;
            }

            .main ul {
                list-style-type: none;
                padding: 0;
            }

            .main li {
                margin-bottom: 5px;
                text-align: center;
            }

                .main li a {
                    text-decoration: none;
                    font-weight: bold;
                    transition: 0.3 ease;
                }

                    .main li a:hover {
                        font-size: 15px;
                    }

        .footer-section {
            background-color: #f8f9fa;
            position: sticky;
            bottom: 0;
        }

        .footer-container {
            align-items: center;
        }

        .right-content div {
            margin: 0 20px;
            text-align: center;
        }

        .right-content ol {
            padding: 0;
            list-style: none;
        }

            .right-content ol div {
                font-weight: bold;
                text-align: center;
            }

        .right-content li {
            display: inline-flex;
            margin-left: 20px;
        }

        .right-content a {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
            align-items: center;
            transition: 0.3 ease;
        }

            .right-content a:hover {
                text-decoration: underline;
                font-size: 15px;
            }

        .main div {
            margin-right: 0;
        }

        .footer-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        body, h1, h2, h3, p, ul, li {
            margin: 0;
            padding: 0;
        }

        .secondary {
            display: flex;
            justify-content: space-between;
        }

            .secondary > div {
                flex: 1;
            }

            .secondary ol {
                list-style-type: none;
            }

                .secondary ol div {
                    font-size: 14px;
                    color: #777;
                    font-weight: bold;
                }

                .secondary ol li {
                    margin-bottom: 5px;
                    display:inline-block;
                }

                .secondary ol li a {
                        text-decoration: none;
                        color: #007bff;
                        font-weight: bold;
                        align-items: center;
                        transition: 0.3 ease;
                }

        .social-icons {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

            .social-icons a {
                color: #333;
                font-size: 24px;
                margin-left: 50px;
                transition: 0.3 ease;
            }

                .social-icons a:hover {
                    color: #007bff;
                    font-size: 20px;
                }
           


    </style>

    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3 " data-bs-theme=dark>
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Aashiyana</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="AppRoles" asp-action="Index">Roles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Hotels" asp-action="Index">Hotels</a>
                        </li>

                    </ul>
                </div>
            </div>
            <hr />
            <partial name="_LoginPartial"/>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <hr />
        <div class='Footer'>
            <div class='container'>
                <div class='row' id="raw">
                    <section class="main">

                        <div class="column">
                            <h3>Support</h3>
                            <ul>
                                <li><a href="#" class="">Help Centre</a></li>
                                <li><a href="#" class="">Aashiyana Cover</a></li>
                                <li><a href="#" class="">Disability Support</a></li>
                                <li><a href="#" class="">Cancellation Options</a></li>
                                <li><a href="#" class="">Report Neighbourhood Concern</a></li>
                            </ul>
                        </div>

                        <div class="column">
                            <h3>Hosting</h3>
                            <ul>
                                <li><a href="#" class="">Aashiyana Your Home</a></li>
                                <li><a href="#" class="">Aashiyana Cover For Hosts</a></li>
                                <li><a href="#" class="">Hosting Resources</a></li>
                                <li><a href="#" class="">Community Forum</a></li>
                                <li><a href="#" class="">Hosting Responsibly</a></li>
                            </ul>
                        </div>

                        <div class="column">
                            <h3>Aashiyana</h3>
                            <ul>
                                <li><a href="#" class="">Newsroom</a></li>
                                <li><a href="#" class="">New Features</a></li>
                                <li><a href="#" class="">Careers</a></li>
                                <li><a href="#" class="">Investors</a></li>
                                <li><a href="#" class="">Aashiyana.org Emergency Stays</a></li>
                            </ul>
                        </div>
                    </section>

                    <section class="secondary">
                        <div>
                            <ol>
                                <div>© 2024 Aashiyana, Inc.</div>
                                <li><a href="/privacy">Privacy</a></li>
                                <li><a href="/terms">Terms</a></li>
                                <li><a href="/sitemaps">Sitemap</a></li>
                                <li><a href="/details">Company Details</a></li>
                            </ol>
                        </div>

                        <div class="social-icons">
                            <a href="#"><ion-icon name="logo-facebook"></ion-icon></a>
                            <a href="#"><ion-icon name="logo-instagram"></ion-icon></a>
                            <a href="#"><ion-icon name="logo-twitter"></ion-icon></a>
                            <a href="#"><ion-icon name="logo-linkedin"></ion-icon></a>
                        </div>
                    </section>

                </div>
            </div>
        </div>
    </footer>

    <script src="https://unpkg.com/ionicons@5.4.0/dist/ionicons.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
